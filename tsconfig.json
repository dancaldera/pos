{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "removeComments": true,
        "noEmitOnError": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "**/node_modules",
        "**/dist",
        "**/build"
    ],
    "references": [
        {
            "path": "./packages/shared"
        },
        {
            "path": "./apps/frontend"
        },
        {
            "path": "./apps/backend"
        }
    ]
}